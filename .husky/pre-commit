#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# –ü—Ä–æ–ø—É—Å–∫–∞–µ–º, –µ—Å–ª–∏ –µ—Å—Ç—å —Ñ–ª–∞–≥ --no-verify
if [ "$HUSKY_GIT_PARAMS" = "--no-verify" ]; then
  echo "‚úÖ –•—É–∫ –ø—Ä–æ–ø—É—â–µ–Ω (–∏—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω --no-verify)"
  exit 0
fi

# –ü–æ–ª—É—á–∞–µ–º —Ç–µ–∫—É—â—É—é –≤–µ—Ç–∫—É
CURRENT_BRANCH=$(git rev-parse --abbrev-ref HEAD 2>/dev/null)

# –ü—Ä–æ–≤–µ—Ä—è–µ–º, –Ω–∞—á–∏–Ω–∞–µ—Ç—Å—è –ª–∏ –≤–µ—Ç–∫–∞ —Å "feature/"
if echo "$CURRENT_BRANCH" | grep -q '^feature/'; then
  echo "üîÑ –ó–∞–ø—É—Å–∫–∞–µ–º npx changeset –¥–ª—è –≤–µ—Ç–∫–∏ $CURRENT_BRANCH"
  
  # –°–æ–∑–¥–∞—ë–º –ø—É—Å—Ç–æ–π changeset-—Ñ–∞–π–ª, –µ—Å–ª–∏ –µ–≥–æ –Ω–µ—Ç
  npx changeset --empty

  # –ù–∞—Ö–æ–¥–∏–º –ø–æ—Å–ª–µ–¥–Ω–∏–π changeset-—Ñ–∞–π–ª
  CHANGESET_DIR=$(pwd)/.changeset
  CHANGESET_FILE=$(find "$CHANGESET_DIR" -type f -name "*.md" -printf "%T@ %p\n" | sort -n | tail -1 | cut -f2- -d' ')

  # –û—á–∏—â–∞–µ–º —Ñ–∞–π–ª –∏–ª–∏ —Å–æ–∑–¥–∞—ë–º –ø—É—Å—Ç–æ–π
  > "$CHANGESET_FILE"

  git add "$CHANGESET_FILE"
  echo "‚úÖ changeset-—Ñ–∞–π–ª —Å–æ–∑–¥–∞–Ω –∏ –æ—á–∏—â–µ–Ω"
else
  echo "‚ÑπÔ∏è –í–µ—Ç–∫–∞ $CURRENT_BRANCH –Ω–µ —Å–æ–æ—Ç–≤–µ—Ç—Å—Ç–≤—É–µ—Ç pattern 'feature/*' ‚Äî changeset –Ω–µ —Å–æ–∑–¥–∞—ë—Ç—Å—è"
fi