#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

if [ "$HUSKY_GIT_PARAMS" = "--no-verify" ]; then
  echo "‚úÖ –•—É–∫ –ø—Ä–æ–ø—É—â–µ–Ω (–∏—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω --no-verify)"
  exit 0
fi

# –ü–æ–ª—É—á–∞–µ–º —Ç–µ–∫—É—â—É—é –≤–µ—Ç–∫—É
CURRENT_BRANCH=$(git rev-parse --abbrev-ref HEAD 2>/dev/null)

# –ü—Ä–æ–≤–µ—Ä—è–µ–º, –Ω–∞—á–∏–Ω–∞–µ—Ç—Å—è –ª–∏ –≤–µ—Ç–∫–∞ —Å "feature/"
if echo "$CURRENT_BRANCH" | grep -q '^feature/'; then
  echo "üîÑ –ó–∞–ø—É—Å–∫–∞–µ–º npx changeset –¥–ª—è –≤–µ—Ç–∫–∏ $CURRENT_BRANCH"
  npx changeset --empty

  # –ñ–¥—ë–º –ø–æ—è–≤–ª–µ–Ω–∏—è —Ñ–∞–π–ª–∞
  echo "‚è≥ –û–∂–∏–¥–∞–µ–º –ø–æ—è–≤–ª–µ–Ω–∏—è changeset-—Ñ–∞–π–ª–∞..."
  ATTEMPTS=0
  MAX_ATTEMPTS=10
  while [ -z "$(find .changeset -type f -name \"*.md\")" ] && [ $ATTEMPTS -lt $MAX_ATTEMPTS ]; do
    sleep 1
    ATTEMPTS=$((ATTEMPTS + 1))
  done

  if [ $ATTEMPTS -ge $MAX_ATTEMPTS ]; then
    echo "‚ùå changeset-—Ñ–∞–π–ª –Ω–µ —Å–æ–∑–¥–∞–Ω –∑–∞ $MAX_ATTEMPTS —Å–µ–∫—É–Ω–¥"
    exit 1
  fi

  # –ü–æ–ª—É—á–∞–µ–º –ø—É—Ç—å –∫ –ø–æ—Å–ª–µ–¥–Ω–µ–º—É —Å–æ–∑–¥–∞–Ω–Ω–æ–º—É —Ñ–∞–π–ª—É
  CHANGESET_FILE=$(find .changeset -type f -name "*.md" | sort -r | head -n 1)

  # –ü–æ–ª—É—á–∞–µ–º —Å–æ–æ–±—â–µ–Ω–∏–µ –∫–æ–º–º–∏—Ç–∞
  COMMIT_MSG=$(git log -1 --pretty=%B)

  echo "üìÑ –ò–∑–º–µ–Ω—è–µ–º —Ñ–∞–π–ª: $CHANGESET_FILE"

  # –î–æ–±–∞–≤–ª—è–µ–º —Å—Ç—Ä–æ–∫—É –Ω–∞ 2-—é –ø–æ–∑–∏—Ü–∏—é
  sed -i '' '2i\
"test-changelog-vite": patch
' "$CHANGESET_FILE"

  # –î–æ–±–∞–≤–ª—è–µ–º —Å–æ–æ–±—â–µ–Ω–∏–µ –Ω–∞ 5-—é –ø–æ–∑–∏—Ü–∏—é
  sed -i '' "5i\\
$COMMIT_MSG
" "$CHANGESET_FILE"

  git add "$CHANGESET_FILE"
  echo "‚úÖ changeset —Å–æ–∑–¥–∞–Ω –∏ –∏–∑–º–µ–Ω—ë–Ω"
else
  echo "‚ÑπÔ∏è –í–µ—Ç–∫–∞ $CURRENT_BRANCH –Ω–µ —Å–æ–æ—Ç–≤–µ—Ç—Å—Ç–≤—É–µ—Ç pattern 'feature/*' ‚Äî changeset –Ω–µ —Å–æ–∑–¥–∞–µ—Ç—Å—è"
fi